<h1>My Tasks</h1>

<ol class="list-group m-2">
<% @tasks.each do |task|%>

  <% if task.completed %>
    <li class="list-group-item w-25">
      <i class="far fa-check-square"></i> <%= link_to "#{task.title}", task_path(task.id)%>
      <button>
      <%= link_to "Delete",
            task_path(task.id),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
      </button>
    </li>
  <%else%>
    <li class="list-group-item w-25">
      <i class="far fa-square"></i> <%= link_to "#{task.title}", task_path(task.id)%>
      <button>
      <%= link_to "Delete",
            task_path(task.id),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
      </button>
    </li>
  <%end%>
<% end %>
</ol>

<button class="btn btn-info text-uppercase">
  <%= link_to "Add a New Task", new_task_path%>
</button>
